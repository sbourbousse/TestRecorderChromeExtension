{
  "manifest_version": 3,
  "name": "Test Recorder for TestRail",
  "version": "1.0",
  "description": "Record actions on a webpage to generate TestRail test cases.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["modal.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["modal.html", "test-recorder-interface.html", "test-recorder-interface.js", "libs/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
